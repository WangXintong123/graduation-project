/* miniprogram/pages/mine/like/like.wxss */
.like-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #fa381e;
  height:80rpx;
  color: #fff;
  justify-content: center;
  flex-direction: row;
  position: relative;
} 
.like-container text{
  font-size: 38rpx;
}
.huitui{
  font-size: 35rpx;
  font-weight: bolder;
  position: absolute;
  left: 10rpx;
  margin-top: -4rpx;
}
.like-type{
  width:100%;
  height:120rpx;
  background-color: #fa381e;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.like{
  width:45%;
  height:80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  background-color: #fa381e;
  border: 1px solid #fff;
  color: #fff;
}
.active{
  background-color: #fff;
  border: 1px solid #fa381e;
  color:#fa381e ;
}
.like-teacher{
  width:100%;
  height:320rpx;
  border:1px solid rgb(209, 208, 208);
  display: flex;
  flex-direction: row;
  margin:50rpx 0;
  background-color: #fff;
}
.like-pic{
  width:30%;
  height:75%;
  margin-top: 30rpx;
  margin-left: 50rpx;
}
.like-mess{
  width:50%;
  height:75%;
  margin-top: 60rpx;
  margin-left: 50rpx;
  padding: 10rpx;
}
.like-fire{
  width:90%;
  height:25%;
  margin-top: 80rpx;
}
.grayfire{
  font-size: 50rpx;
  color:rgb(208, 206, 206);
}
.redfire{
  color: #fa6b1e;
  font-size: 50rpx;
}
.dislike{
  width:180rpx;
  height:60rpx;
  display: flex;
  flex-direction: row-reverse;
  font-size: 30rpx;
  margin-right: 20rpx;
  padding-top: 20rpx;
  color: #fa9b1e;
}
.one-img{
  width:30%;
  height:70%;
  /* background-color: aquamarine; */
  margin:35rpx;
}
.one-another{
  width:50%;
  height:80%;
  /* background-color: aquamarine; */
  margin-top: 35rpx;
}
.another-detail{
  width:100%;
  height:20%;
  /* background-color: bisque; */
  margin-top: 10rpx;
  margin-bottom: 30rpx;
  font-size: 35rpx;
  display: flex;
  flex-direction: row;
}
.detail-name{
 width:210rpx;
 height: 100%;
 overflow-x: scroll;
 margin-left: 15rpx;
}
.detail-name text{
  word-break: keep-all;
}