/* miniprogram/pages/mine/mine.wxss */
.mine-mine{
  width:100%;
  height:500rpx;
  background-color: #fff;
}
.tuichu{
  width:100%;
  height:270rpx;
  background:linear-gradient(#fa381ede, #ffffff);
}
.tuichu-word{
  display: flex;
  flex-direction: row-reverse;
  font-size: 35rpx;
  padding-top: 30rpx;
  margin-right: 30rpx;
  color: #ffffff;
  font-weight: bolder;
}
.mine-message{
  width:100%;
  height:230rpx;
  background-color: #ffffff;
  border-bottom-left-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow:0px 5px 7px  rgb(170, 170, 170);
}
.mine-img{
  width:150rpx;
  height:150rpx;
  border-radius: 100%;
  position: absolute;
  top:-100rpx;
  border: 3px solid #fff;
}
.mine-name{
  width:80%;
  height:90rpx;
  position: absolute;
  top:90rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  border-top: 1px solid rgb(216, 216, 216) ;
}
.mine-function{
 width:100%;
 height:400rpx;
 margin-top: 90rpx;
}
.pinglun{
  width:100%;
  height:90rpx;
  background-color: #fff;
  border-left: 40rpx solid #ff8985;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
}
.shoucang{
  width:100%;
  height:90rpx;
  background-color: #fff;
  border-left: 40rpx solid #ffb078;
  margin-top: 50rpx;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
}
.mine{
  width:100%;
  height:90rpx;
  background-color: #fff;
  border-left: 40rpx solid #5eb4ff;
  margin-top: 50rpx;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
}
.fun-inner{
  font-size: 38rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 40rpx;
}
