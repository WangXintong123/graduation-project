<!--pages/shouye/more.wxml-->
<view class="more-container">
  <icon class="huitui iconfont icon-arrow-left"></icon>
  <text>{{arg_kemu}}</text>
</view>
<view class="more-teacher" wx:for="{{more_teacher}}" wx:for-item="mteacherItem">
  <view class="more-pic">
    <image src="{{more_teacher[0].img}}" mode="widthFix"  style='width:210rpx;height:120rpx'/>
  </view>
  <view class="more-mess">
    <text style="font-size:35rpx">{{more_teacher[0].name}}</text>
    <view class="more-fire">
      <icon wx:for="{{mteacherItem.fires}}" wx:key="{{item.id}}" class='iconfont icon-huomiao + {{item.class}}'  ></icon>
    </view>
  </view>
</view>
