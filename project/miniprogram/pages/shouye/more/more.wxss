/* pages/shouye/more.wxss */
.more-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #fa381e;
  height:120rpx;
  color: #fff;
  justify-content: center;
  flex-direction: row;
  position: relative;
  padding-top: 35rpx;
} 
.more-container text{
  font-size: 38rpx;

}
.huitui{
  font-size: 35rpx;
  font-weight: bolder;
  position: absolute;
  left: 10rpx;
  margin-top: -4rpx;
}
.more-teacher{
  width:100%;
  height:360rpx;
  border:1px solid rgb(209, 208, 208);
  display: flex;
  flex-direction: row;
  margin-top: 45rpx;
}
.more-pic{
  width:30%;
  height:75%;
  margin-top: 30rpx;
  margin-left: 50rpx;
}
.more-mess{
  width:50%;
  height:75%;
  margin-top: 60rpx;
  margin-left: 50rpx;
  padding: 10rpx;
}
.more-fire{
  width:90%;
  height:25%;
  margin-top: 120rpx;
}
.grayfire{
  font-size: 50rpx;
  color:rgb(208, 206, 206);
}
.redfire{
  color: #fa6b1e;
  font-size: 50rpx;
}
.fixed{
  position: fixed;
  width:100%;
}