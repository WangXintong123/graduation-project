/* miniprogram/pages/shouye/search/search.wxss */
.search-chose{
  width:100%;
  height:90rpx;
  background-color: #fa381e;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.chose-type{
  width:180rpx;
  height:90rpx;
  background-color: #fa381e;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}
.type-name{
  position: absolute;
  left:30rpx;
  font-size: 32rpx;
  color: #fff;
}
.type-xiala{
  position: absolute;
  right:20rpx;
  margin-top: -5rpx;
  font-size: 30rpx;
  color: #fff;
}
.chose-list{
  width:180rpx;
  height:150rpx;
  background-color: #fa381e;
}
.list-in{
  width:150rpx;
  height:50%;
  padding-left: 30rpx;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #fff;
}
.search-input{
  background-color: #fff;
  width:65%;
  height:60%;
  margin-left: 5%;
  border-radius: 15rpx;
}