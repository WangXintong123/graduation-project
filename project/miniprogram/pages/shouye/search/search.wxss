/* miniprogram/pages/shouye/search/search.wxss */
.search-chose{
  width:100%;
  height:90rpx;
  background-color: #fa381e;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.chose-type{
  width:180rpx;
  height:90rpx;
  background-color: #fa381e;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}
.type-name{
  position: absolute;
  left:30rpx;
  font-size: 32rpx;
  color: #fff;
}
.type-xiala{
  position: absolute;
  right:20rpx;
  margin-top: -5rpx;
  font-size: 30rpx;
  color: #fff;
}
.chose-list{
  width:180rpx;
  height:150rpx;
  background-color: #fa381e;
  z-index: 10;
  position:fixed;
  top:90rpx;
}
.list-in{
  width:150rpx;
  height:50%;
  padding-left: 30rpx;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #fff;
}
.search-input{
  background-color: #fff;
  width:55%;
  height:60%;
  margin-left: 3%;
  border-radius: 15rpx;
}
.searchbut{
  color: #fff;
  margin-left: 20rpx;
}
.searchcontext{
  margin-top: 30rpx;
  height:350rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.searchinner{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-left: 80rpx;
}
.score{
  font-size: 40rpx;
  color: #fa381e;
  margin-top: 80rpx;
}
.fixed{
  position: fixed;
  top:0;
  z-index: 20;
  width:100%
}