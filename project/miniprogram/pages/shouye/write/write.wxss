/* miniprogram/pages/shouye/write/write.wxss */
.write-out{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.3);
  overflow: hidden;
}
.write-inner{
  position: relative;
  width: 90%;
  height:70%;
  margin:15% auto;
  overflow: hidden;
  background-color: rgb(255, 255, 255);
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.write-off{
  width:100%;
  height:7%;
  /* background-color: blanchedalmond; */
  display: flex;
  flex-direction: row-reverse;
}
.write-off icon{
  margin-right: 10rpx;
  font-size: 45rpx;
}
.write-fires{
  width:70%;
  height:20%;
  /* background-color: burlywood; */
  margin-top: 20rpx;
}
.write-word{
  width:80%;
  height:40%;
  /* background-color: burlywood; */
  margin-top: 50rpx;
}
.grayfire{
  font-size: 95rpx;
  color: rgb(190, 188, 188);
}
.activefire{
  font-size: 95rpx;
  color: rgb(247, 82, 22);
}
.write-fires text{
  color: rgb(247, 82, 22);
  margin-left: 10rpx;
  font-size: 36rpx;
  text-shadow:1px 1px 2px rgb(216, 216, 216);
}
.word-class{
  width:100%;
  height:100%;
  border:1px dashed rgb(179, 179, 179);
  color:rgb(153, 153, 153);
}
.write-sub{
  background-color: rgb(255, 78, 71);
  color: #fff;
  margin-top: -30rpx;
}