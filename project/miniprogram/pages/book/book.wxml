<!--miniprogram/pages/book/book.wxml-->
<view class="book-container">书籍</view>
<view class="kemu-out">
  <view class="kemu-list" wx:for="{{kemu}}">
    <view class="kemu-img" bindtap="intoDetail">
      <view class="kemu-on">
      <view class="kemu-into">
        <view class="into-word">
          <view>进入</view><view>榜单</view>
        </view>
      </view>
      </view>
      <image src="{{item.src}}" mode="scaleToFill"  style='width:100%;height:100%;position: absolute;z-index: 1;'/>
    </view>
    <view class="kemu-book">
      <view class="one-book" wx:for="{{item.book}}" wx:for-item="bookItem">
          <text style="margin-right:20rpx">-</text>
          <view class="book-name"><text>{{bookItem.bname}}</text></view>
        <view class="book-point">{{bookItem.point}}</view>
      </view>
    </view>
  </view>
</view>
