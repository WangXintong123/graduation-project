/* miniprogram/pages/book/book.wxss */
.book-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #fa381e;
  height:125rpx;
  color: #fff;
  justify-content: center;
  padding-top: 35rpx;
} 
.book-container text{
  font-size: 32rpx;
}
.kemu-out{
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}
.kemu-list{
  width:85%;
  height:270rpx;
  /* background-color: honeydew; */
  margin-top: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1px solid rgb(165, 164, 164);
  box-shadow:6px 6px 6px #ccc;
}
.kemu-img{
  width:30%;
  height:90%;
  /* background-color: khaki; */
  margin-left: 5%;
  position: relative;
}
.kemu-on{
  width:100%;
  height:100%;
  background-color: rgba(128, 128, 128, 0.405);
  z-index: 3;
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.kemu-into{
  width:70%;
  height:60%;
  border: 2px solid rgba(255, 255, 255, 0.8);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.into-word{
  font-size: 45rpx;
  color: rgba(255, 255, 255, 0.8);
}
.kemu-book{
  width:50%;
  height:90%;
  /* background-color: lightcyan; */
  margin-left: 7%;
}
.one-book{
  height:25%;
  width:100%;
  /* background-color: lightpink; */
  margin-top: 5%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.book-name{
  height:80%;
  font-size: 32rpx;
  /* background-color: aqua; */
  overflow: scroll;
}
.book-name text{
  height:100%;
  width:80%;
  word-break: keep-all;
}
.book-point{
  font-size: 40rpx;
  color:#fa381e;
  margin-left: 15rpx;
}
.fixed{
  position: fixed;
  width:100%;
  z-index: 10;
}
