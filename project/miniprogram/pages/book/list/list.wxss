/* miniprogram/pages/book/list/list.wxss */
.list-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #fa381e;
  height:80rpx;
  color: #fff;
  justify-content: center;
  flex-direction: row;
  position: relative;
} 
.list-container text{
  font-size: 38rpx;

}
.huitui{
  font-size: 35rpx;
  font-weight: bolder;
  position: absolute;
  left: 10rpx;
  margin-top: -4rpx;
}
.list-out{
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.list-one{
  width:80%;
  height:320rpx;
  margin-top: 70rpx;
  display: flex;
  flex-direction: row;
  border:5px double rgb(255, 222, 222);
  border-radius: 20rpx;
}
.one-img{
  width:30%;
  height:70%;
  /* background-color: aquamarine; */
  margin:35rpx;
}
.one-another{
  width:50%;
  height:80%;
  /* background-color: aquamarine; */
  margin-top: 35rpx;
}
.another-detail{
  width:100%;
  height:20%;
  /* background-color: bisque; */
  margin-top: 10rpx;
  margin-bottom: 30rpx;
  font-size: 35rpx;
  display: flex;
  flex-direction: row;
}
.detail-name{
 width:210rpx;
 height: 100%;
 overflow-x: scroll;
 margin-left: 15rpx;
}
.detail-name text{
  word-break: keep-all;
}